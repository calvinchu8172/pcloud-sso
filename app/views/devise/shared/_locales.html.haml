#locales-modal.modal.fade{ 'aria-labelledby' => 'locales-modal-label', role: 'dialog', tabindex: '-1' }
  .modal-dialog{ role: 'document'}
    .modal-content
      .modal-header
        %button.close{ 'aria-label' => 'Close', 'data-dismiss' => 'modal', type: 'button' }
          %span{ 'aria-hidden' => 'true' } Ã—
        %h4#locales-modal-label.modal-title
          = I18n.t('labels.language')
      .modal-body
        .row.locale-font
          - @options_path.each do |l, value|
            .col-xs-6.col-sm-6.col-md-6
              = flag_icon(value['locale'])
              = link_to l, value
      .modal-footer
        = button_tag I18n.t('labels.cancel'), class: 'btn btn-default', 'data-dismiss' => 'modal'
