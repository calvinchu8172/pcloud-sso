= f.input :current_password, label: I18n.t("user.labels.current_password"), wrapper_html: { class: 'has-feedback'} do
  = f.input_field :current_password, placeholder: I18n.t("user.labels.password_suggestion"), class: 'form-control add-padding-right', required: true, maxlength:14
  / .show-password-wrapper
  = content_tag 'span', class: 'form-control-feedback' do
    / .password-meter-anchor


= f.input :password, label: I18n.t("user.labels.password"), wrapper_html: { class: 'has-feedback'} do
  = f.input_field :password, placeholder: I18n.t("user.labels.password_suggestion"), class: 'form-control add-padding-right', required: true, maxlength:14
  .show-password-wrapper
  = content_tag 'span', class: 'form-control-feedback password-meter-wrapper' do
    .password-meter-anchor
/ .show-password-wrapper

= f.input :password_confirmation, label: I18n.t("user.labels.password_confirmation"), wrapper_html: { class: 'has-feedback'} do
